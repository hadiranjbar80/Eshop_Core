@page
@model Eshop_Core.App.Pages.Admin.IndexModel
@{
    ViewData["Title"] = "";
}

<h2>لیست محصولات</h2>
<hr />
<p>
    <a asp-page="AddNewProduct" class="btn btn-primary">افزودن محصول</a>
</p>
<table class="table">
    <thead class="thead-light">
        <tr>
            <th>تصویر</th>
            <th>نام محصول</th>
            <th>قیمت</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Products)
        {
            <tr>
                <td>
                    <img src="~/images/@(item.Id).jpg" style="max-width:200px; border:1px solid #00ff21;padding:3px" />
                </td>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Item.Price
                </td>
                <td>
                    <div style="color:#fff;">
                        <a class="btn btn-warning" asp-page="Edit" asp-route-id="@item.Id">ویرایش</a>
                        <a class="btn btn-danger" asp-page="Delete" asp-route-id="@item.Id">حذف</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>